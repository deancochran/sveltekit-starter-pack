{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		// "baseUrl": "./src", interferes with sveletkits autogenerated baseUrl

		// Enable latest features
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags
		"noUnusedLocals": false, // turn true to be more strict
		"noUnusedParameters": false, // turn true to be more strict
		"noPropertyAccessFromIndexSignature": false, // turn true to be more strict
		"useUnknownInCatchVariables": false,

		// extras
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"noImplicitAny": false
	}
}
